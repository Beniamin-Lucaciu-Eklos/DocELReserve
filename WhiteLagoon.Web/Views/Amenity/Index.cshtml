@model IEnumerable<WhiteLagoon.Domain.Entities.Amenity>


<div class="w-100 card border-0 pb-4">
    <div class="card-header bg-success bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Amenity</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amenity" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Vila Name</th>
                    <th>Amenity Name</th>
                    <th>Amenity Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entity in Model)
                {
                    <tr>
                        <td>@entity.Vila.Name</td>
                        <td>@entity.Name</td>
                        <td>@entity.Description</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Amenity" asp-action="Edit" asp-route-amenityId="@entity.Id"
                                   class="btn btn-sm btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                                <a asp-controller="Amenity" asp-action="Delete" asp-route-amenityId="@entity.Id"
                                   class="btn btn-sm btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
