@model LuxuryVilaManagement.Web.ViewModels.VilaNumberViewModel

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Vila Number</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                @* <div asp-validation-summary="All"></div> *@
                <input asp-for="@Model.VilaNumber.Vila_Number" hidden />
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.VilaNumber.VilaId" asp-items="@Model.VilaList"
                            class="form-select border shadow">
                        <option disabled selected>-- Select Vila --</option>
                    </select>
                    <label class="ms-2">Vila Id</label>
                    <span asp-validation-for="@Model.VilaNumber.VilaId" class="text-danger" />
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.VilaNumber.Vila_Number" disabled class="form-control border shadow" />
                    <label class="ms-2">Vila Number</label>
                    <span asp-validation-for="@Model.VilaNumber.Vila_Number" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.VilaNumber.SpecialDetails" class="form-control border shadow" />
                    <label class="ms-2">Special Details</label>
                    <span asp-validation-for="@Model.VilaNumber.SpecialDetails" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Edit
                        </button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="VilaNumber" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}